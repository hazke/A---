# 前端 Dockerfile
FROM node:20-alpine

# 设置工作目录
WORKDIR /app

# 复制 package.json
COPY frontend/package*.json ./

# 安装依赖
RUN npm install

# 复制前端文件
COPY frontend/ .

# 暴露端口
EXPOSE 5173

# 设置环境变量
ENV DOCKER=true
ENV NODE_ENV=development

# 启动开发服务器
# 使用 --host 0.0.0.0 允许外部访问
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]

